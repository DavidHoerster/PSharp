namespace MultiPaxos
{
    machine Timer
    {
	    Machine Target;
		
		int TimeoutValue;

	    start state Init
		{
		    entry
			{
			    Target = payload[0] as Machine;
				TimeoutValue = (int)payload[1];
				raise local;
			}

			on local goto Loop;
		}

		state Loop
		{
		    ignore cancelTimer;
			on startTimer goto TimerStarted;
		}

		state TimerStarted
		{
		    ignore startTimer;

		    entry
			{
			    if ($)
				{
				    //send Target, timeout (this);
				    raise local;
			    }
			}

			on local goto Loop;
			on cancelTimer goto Loop;
		}
    }
}
