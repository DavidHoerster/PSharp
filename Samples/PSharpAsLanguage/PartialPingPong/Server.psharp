namespace PartialPingPong
{
    partial machine Server
    {
        machine Client;

        start state Init
        {
            entry
            {
				this.Client = create(Client , Config, this);
                raise(Unit);
            }

            on Unit goto Playing;
        }
		
        state Playing
        {
            entry
            {
				send(this.Client, Pong);
            }

            on Unit do SendPong;
            on Ping do SendPong;
        }
    }
}
